 <div id="main">
    <div class="container">
            <h1>My Education</h1>
            <div class="columns col-gapless">
                <br>
                {{#if isAdmin}}
                <div>
                    <a href="/Education/new" class="btn btn-link">New Education</a>
                </div>
                {{/if}}
                {{#if dbError}}
                    <div>
                        Sorry, there was a problem with the database:<br />
                        {{theError}}
                    </div>
                {{else}}
                <br>
                    {{#each Education}}
                        <div class="column col-3 col-md-6 col-sm-12">
                            <div class="card">
                                <div class="card-image">
                                    <img src="{{simgURL}}" alt="{{simgURL}}" class="img-responsive">
                                </div>
                                <div class="card-header">
                                    <div class="card-title h6"><h6>{{sname}} </h6></div>
                                    <div class="card-subtitle text-gray"><p>{{syear}} </p></div> 
                                        <div><p> {{stype}}</p></div>
                                    <div class="card-subtitle text-gray"><h5 id="description">description: </h5><br> {{sdesc}}  </div>
                                </div>
                                {{#if ../isAdmin}}
                                <div>
                                    <a href="/Education/update/{{sid}}">Modify</a> - <a href="/Education/delete/{{sid}}" class="important">Delete</a>
                                </div>
                                {{/if}}
                            </div>
                        </div>
                        <br>
                    {{/each}}
                {{/if}}
                
             
        </div>
</div>




       
 

